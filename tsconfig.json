{
  "include": ["./*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "target": "es2024",
    "lib": ["esnext"],
    "types": ["node"],
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
