{
  "include": ["./index.ts", "./demo.ts", "./compat.lo.ts", "./compat.bun.ts"],
  "exclude": ["*.js", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "target": "es2024",
    "lib": ["esnext"],
    "types": ["node", "lo-types", "bun"],
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "allowJs": false,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@beardsoft", "./node_modules/@types"]
  }
}
